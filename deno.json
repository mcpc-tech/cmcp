{
  "name": "@mcpc/cmcp",
  "version": "0.0.2",
  "description": "Truly Useful Anti-Patterns: Client-Tool-Execution MCP Server",
  "author": "mcpc.tech",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mcpc-tech/dynamic-mcp-server.git"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "dynamic",
    "client-execution",
    "proxy",
    "tools",
    "ai",
    "llm"
  ],
  "exports": {
    ".": "./mod.ts",
    "./server": "./decorators/dyn-server.ts",
    "./client": "./decorators/dyn-client.ts",
    "./types": "./shared/types.ts",
    "./sse": "./shared/sse.ts",
    "./controllers": "./controller/mod.ts"
  },
  "tasks": {
    "dev": "deno run --watch main.ts",
    "build": "deno check --all .",
    "test": "deno test --quiet --allow-all",
    "fmt": "deno fmt",
    "lint": "deno lint"
  },
  "imports": {
    "@hono/zod-openapi": "npm:@hono/zod-openapi@^0.19.9",
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^1.15.0",
    "@std/assert": "jsr:@std/assert@^1.0.13",
    "@std/http": "jsr:@std/http@^1.0.19",
    "zod": "npm:zod@^3.25.74"
  },
  "publish": {
    "exclude": [
      "*.lock",
      ".vscode/",
      ".git/",
      "server.ts",
      "client.ts"
    ]
  }
}
